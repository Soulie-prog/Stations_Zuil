ALTER TABLE Goedkeuring_Check
ADD COLUMN Moderator_ID int REFERENCES Moderator (nummer);

ALTER TABLE Goedkeuring_Check
ADD COLUMN InfoBericht_ID int REFERENCES Info_Bericht (nummer);

ALTER TABLE Info_Bericht
ADD COLUMN Goedkeuring_Check_ID int REFERENCES Goedkeuring_Check (nummer);

ALTER TABLE Info_Bericht
ADD COLUMN station_ID varchar(255) REFERENCES station (nummer);

ALTER TABLE station_service
ADD COLUMN station_ID varchar(255) REFERENCES station (nummer);

ALTER TABLE Info_Bericht
ADD CONSTRAINT fk_station 
FOREIGN KEY (station_ID) 
REFERENCES station (nummer);

SELECT * from Goedkeuring_Check
